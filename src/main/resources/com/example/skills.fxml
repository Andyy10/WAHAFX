<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="612.0" prefWidth="713.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.SkillController">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="24.0" layoutY="28.0" prefHeight="597.0" prefWidth="666.0">

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <children>

                <Label text="Gestión de Habilidades">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="skillTable" prefHeight="288.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="colSkillCode" prefWidth="150.0" text="Código" />
                        <TableColumn fx:id="colSkillName" prefWidth="300.0" text="Nombre de la Habilidad" />
                    </columns>
                </TableView>

                <VBox alignment="TOP_CENTER" prefHeight="157.0" prefWidth="626.0" spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 15;">

                    <children>

                        <Label alignment="TOP_CENTER" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Detalles de la Habilidad" textAlignment="CENTER" />

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" text="Código:" />
                                <TextField fx:id="tfSkillCode" prefWidth="200.0" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" text="Nombre:" />
                                <TextField fx:id="tfSkillName" prefWidth="300.0" />
                            </children>
                        </HBox>

                    </children>

                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>

                <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="buttonAñadir" onAction="#handleAddSkill" text="Añadir" />
                        <Button fx:id="buttonActualizar" onAction="#handleUpdateSkill" text="Actualizar" />
                        <Button fx:id="buttonEliminar" onAction="#handleDeleteSkill" text="Eliminar" />
                        <Button fx:id="buttonLimpiar" onAction="#handleClear" text="Limpiar" />
                        <Button fx:id="buttonVolver" onAction="#handleBack" prefWidth="132.0" text="Dashboard" />
                    </buttons>

                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </ButtonBar>

            </children>

        </VBox>
    </children>

</AnchorPane>
