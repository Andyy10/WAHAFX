<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="769.0" prefWidth="713.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.AddressController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="24.0" layoutY="28.0" prefHeight="725.0" prefWidth="666.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Gestión de Direcciones">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TableView fx:id="addressTable" prefHeight="288.0" prefWidth="509.0">
              <columns>
                <TableColumn fx:id="colAddressId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colLine1" prefWidth="200.0" text="Línea 1" />
                  <TableColumn fx:id="colTownCity" prefWidth="120.0" text="Ciudad" />
                  <TableColumn fx:id="colStateProvince" prefWidth="120.0" text="Estado/Provincia" />
              </columns>
            </TableView>
            <VBox alignment="TOP_CENTER" prefHeight="333.0" prefWidth="626.0" spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 15;">
               <children>
                  <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="168.0" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-alignment: center;" text="Detalles de la Dirección" textAlignment="CENTER" />
                  <HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="477.0" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="120.0" text="ID:" />
                        <TextField fx:id="tfAddressId" editable="false" prefWidth="200.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="400.0" spacing="10.0">
                     <children>
                        <Label prefWidth="120.0" text="Línea 1:" />
                        <TextField fx:id="tfLine1" prefWidth="400.0" promptText="Calle y número" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="477.0" spacing="10.0">
                     <children>
                        <Label prefWidth="120.0" text="Línea 2:" />
                        <TextField fx:id="tfLine2" prefWidth="400.0" promptText="Departamento, piso, etc" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="594.0" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="120.0" text="Línea 3:" />
                        <TextField fx:id="tfLine3" prefWidth="400.0" promptText="Colonia, referencia, etc" />
                     </children>
                  </HBox>
                  <HBox prefHeight="26.0" prefWidth="594.0" spacing="10.0">
                     <children>
                        <Label prefWidth="120.0" text="Ciudad:" />
                        <TextField fx:id="tfTownCity" prefWidth="200.0" promptText="Nombre de la ciudad" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="594.0" spacing="10.0">
                     <children>
                        <Label prefWidth="120.0" text="Estado/Provincia:" />
                        <TextField fx:id="tfStateProvince" prefWidth="200.0" promptText="Nombre del estado" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label prefWidth="120.0" text="Código País:" />
                        <TextField fx:id="tfCountryCode" prefWidth="100.0" promptText="Ej.: 52" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="buttonAñadir" mnemonicParsing="false" onAction="#handleAddAddress" text="Agregar" />
                  <Button fx:id="buttonActualizar" mnemonicParsing="false" onAction="#handleUpdateAddress" text="Actualizar" />
                  <Button fx:id="buttonEliminar" mnemonicParsing="false" onAction="#handleDeleteAddress" text="Eliminar" />
                  <Button fx:id="buttonLimpiar" mnemonicParsing="false" onAction="#handleClear" text="Limpiar" />
                  <Button fx:id="buttonVolver" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="132.0" text="Dashboard" />
              </buttons>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ButtonBar>

             
         </children>
      </VBox>
   </children>
</AnchorPane>
